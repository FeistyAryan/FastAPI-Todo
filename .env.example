# PostgreSQL Credentials
POSTGRES_USER=myappuser
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=myappdb

# FastAPI Application
DATABASE_URL=postgresql+asyncpg://myappuser:your_db_password@db:5432/myappdb

# JWT Settings
ACCESS_SECRET_KEY=a_long_random_string_for_access_tokens
REFRESH_SECRET_KEY=a_different_long_random_string_for_refresh_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Redis
REDIS_URL=redis://redis:6379/0

# pgAdmin Credentials (Optional)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin